{
  "name": "ynab-chrome-widget",
  "displayName": "Peek for YNAB",
  "version": "0.9.1",
  "description": "Check on your YNAB category and account balances",
  "author": "fa-sharp",
  "packageManager": "pnpm@8.6.0",
  "scripts": {
    "dev:plasmo": "plasmo dev --port 3001",
    "build:plasmo": "plasmo build",
    "build:plasmo:zip": "plasmo build --zip",
    "dev:next": "next dev --port 3000",
    "build:next": "next build",
    "start:next": "next start",
    "lint": "eslint ."
  },
  "dependencies": {
    "@plasmohq/storage": "^1.6.1",
    "@tanstack/query-core": "^4.29.11",
    "@tanstack/react-query": "^4.29.12",
    "@tanstack/react-query-devtools": "^4.29.12",
    "@tanstack/react-query-persist-client": "^4.29.12",
    "cors": "^2.8.5",
    "downshift": "^6.1.12",
    "idb-keyval": "^6.2.1",
    "nanoid": "^4.0.2",
    "next": "^12.1.6",
    "plasmo": "^0.73.7",
    "puro": "^0.8.4",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "tabler-icons-react": "1.55.0",
    "use-local-storage-state": "^18.3.3",
    "ynab": "^1.55.0"
  },
  "devDependencies": {
    "@next/eslint-plugin-next": "^12.1.6",
    "@trivago/prettier-plugin-sort-imports": "^3.2.0",
    "@types/chrome": "0.0.190",
    "@types/cors": "^2.8.12",
    "@types/node": "17.0.42",
    "@types/react": "18.0.12",
    "@types/react-dom": "18.0.5",
    "@typescript-eslint/eslint-plugin": "^5.28.0",
    "@typescript-eslint/parser": "^5.28.0",
    "eslint": "^8.24.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-react": "^7.31.8",
    "eslint-plugin-react-hooks": "^4.6.0",
    "prettier": "2.8.8",
    "typescript": "^5.1.3"
  },
  "manifest": {
    "permissions": [
      "identity",
      "scripting",
      "activeTab"
    ],
    "host_permissions": [
      "https://api.youneedabudget.com/*",
      "https://api.ynab.com/*"
    ],
    "options_ui": {
      "open_in_tab": true
    }
  }
}
