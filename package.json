{
  "name": "ynab-chrome-widget",
  "displayName": "Peek for YNAB",
  "version": "0.2.0",
  "description": "Check on your YNAB category balances",
  "author": "fa-sharp",
  "packageManager": "pnpm@7.1.9",
  "scripts": {
    "dev:plasmo": "plasmo dev --port 3001",
    "build:plasmo": "plasmo build",
    "dev:next": "next dev --port 3000",
    "build:next": "next build",
    "start:next": "next start"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "next": "^12.1.6",
    "plasmo": "0.54.6",
    "puro": "0.4.1",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-query": "4.0.0-beta.23",
    "tabler-icons-react": "^1.49.0",
    "use-local-storage-state": "^18.1.0",
    "ynab": "^1.28.0"
  },
  "devDependencies": {
    "@next/eslint-plugin-next": "^12.1.6",
    "@trivago/prettier-plugin-sort-imports": "^3.2.0",
    "@types/chrome": "0.0.190",
    "@types/cors": "^2.8.12",
    "@types/node": "17.0.42",
    "@types/react": "18.0.12",
    "@types/react-dom": "18.0.5",
    "@typescript-eslint/eslint-plugin": "^5.28.0",
    "@typescript-eslint/parser": "^5.28.0",
    "eslint": "^8.17.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-react": "^7.30.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "prettier": "2.6.2",
    "querystring-es3": "^0.2.1",
    "typescript": "4.7.3",
    "url": "^0.11.0"
  },
  "manifest": {
    "permissions": [
      "identity"
    ],
    "host_permissions": [
      "https://*/*",
      "$NEXT_PUBLIC_MAIN_URL/*"
    ],
    "options_ui": {
      "open_in_tab": false
    },
    "key": "$CRX_PUBLIC_KEY"
  }
}