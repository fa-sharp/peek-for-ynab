{
  "name": "ynab-chrome-widget",
  "displayName": "Peek for YNAB",
  "version": "0.13.1",
  "description": "Check on your YNAB category and account balances, and quickly add transactions.",
  "author": "fa-sharp",
  "packageManager": "pnpm@8.6.0",
  "homepage": "https://peek-for-ynab.vercel.app",
  "scripts": {
    "dev:plasmo": "plasmo dev --port 3001",
    "dev:plasmo:edge": "plasmo dev --target=edge-mv3 --port 3001",
    "build:plasmo": "plasmo build --hoist",
    "build:plasmo:edge": "plasmo build --hoist --target=edge-mv3",
    "build:plasmo:zip": "plasmo build --hoist --zip",
    "dev:next": "next dev --port 3000",
    "build:next": "next build",
    "start:next": "next start",
    "typecheck": "tsc --noEmit",
    "lint": "eslint ."
  },
  "dependencies": {
    "@plasmohq/storage": "^1.8.0",
    "@tanstack/query-core": "^4.35.3",
    "@tanstack/react-query": "^4.35.3",
    "@tanstack/react-query-devtools": "^4.35.3",
    "@tanstack/react-query-persist-client": "^4.35.5",
    "cors": "^2.8.5",
    "downshift": "^6.1.12",
    "idb-keyval": "^6.2.1",
    "json-formatter-js": "^2.3.4",
    "nanoid": "^4.0.2",
    "next": "^12.3.4",
    "plasmo": "^0.83.0",
    "puro": "^0.8.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tabler-icons-react": "1.55.0",
    "use-local-storage-state": "^19.0.4",
    "ynab": "^2.0.0"
  },
  "devDependencies": {
    "@hello-pangea/dnd": "^16.3.0",
    "@next/eslint-plugin-next": "^12.3.4",
    "@trivago/prettier-plugin-sort-imports": "^4.2.0",
    "@types/chrome": "^0.0.246",
    "@types/cors": "^2.8.14",
    "@types/node": "^20.6.2",
    "@types/react": "^18.2.22",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^6.7.2",
    "@typescript-eslint/parser": "^6.7.2",
    "eslint": "^8.49.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "prettier": "^3.0.3",
    "typescript": "^5.2.2"
  },
  "manifest": {
    "key": "$CRX_PUBLIC_KEY",
    "permissions": [
      "identity"
    ],
    "host_permissions": [
      "https://api.youneedabudget.com/*",
      "https://api.ynab.com/*"
    ],
    "optional_permissions": [
      "scripting",
      "activeTab"
    ],
    "options_ui": {
      "open_in_tab": true
    },
    "commands": {
      "_execute_action": {
        "suggested_key": {
          "default": "Alt+Shift+Y"
        }
      }
    }
  }
}
