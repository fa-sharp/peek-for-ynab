      "https://api.ynab.com/*"
    ],
    "optional_permissions": [
      "scripting",
      "activeTab",
      "notifications"
    ],
    "omnibox": {
      "keyword": "peek"
    },
    "options_ui": {
      "open_in_tab": true
    },
    "commands": {
      "_execute_action": {
