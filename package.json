{
  "name": "ynab-chrome-widget",
  "displayName": "Peek for YNAB",
  "version": "0.18.0",
  "description": "Check on your YNAB category and account balances, and quickly add transactions.",
  "author": "fa-sharp",
  "packageManager": "pnpm@8.15.4",
  "homepage": "https://peek-for-ynab.vercel.app",
  "type": "module",
  "scripts": {
    "dev:plasmo": "plasmo dev --port 3001",
    "dev:plasmo:edge": "plasmo dev --target=edge-mv3 --port 3001",
    "dev:plasmo:firefox": "plasmo dev --target=firefox-mv3",
    "build:plasmo": "plasmo build --hoist",
    "build:plasmo:edge": "plasmo build --hoist --target=edge-mv3",
    "build:plasmo:firefox": "plasmo build --hoist --target=firefox-mv3",
    "build:plasmo:zip": "plasmo build --hoist --zip",
    "dev:next": "next dev --port 3000",
    "build:next": "next build",
    "start:next": "next start",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "lint": "eslint ."
  },
  "dependencies": {
    "@plasmohq/storage": "^1.9.3",
    "@tanstack/query-core": "^5.29.0",
    "@tanstack/react-query": "^5.29.0",
    "@tanstack/react-query-devtools": "^5.29.0",
    "@tanstack/react-query-persist-client": "^5.29.0",
    "@tanstack/react-virtual": "^3.2.0",
    "clsx": "^2.1.0",
    "cors": "^2.8.5",
    "downshift": "^8.5.0",
    "idb-keyval": "^6.2.1",
    "json-formatter-js": "^2.3.4",
    "nanoid": "^5.0.7",
    "next": "^14.1.4",
    "plasmo": "^0.85.2",
    "puro": "^0.8.4",
    "react": "^18.2.0",
    "react-countup": "^6.5.3",
    "react-dom": "^18.2.0",
    "tabler-icons-react": "1.55.0",
    "use-local-storage-state": "^19.2.0",
    "ynab": "^2.2.0"
  },
  "devDependencies": {
    "@hello-pangea/dnd": "^16.6.0",
    "@next/eslint-plugin-next": "^14.1.4",
    "@testing-library/react": "^14.2.2",
    "@testing-library/user-event": "^14.5.2",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/chrome": "^0.0.266",
    "@types/cors": "^2.8.17",
    "@types/node": "^20.12.5",
    "@types/react": "^18.2.74",
    "@types/react-dom": "^18.2.24",
    "@typescript-eslint/eslint-plugin": "^7.5.0",
    "@typescript-eslint/parser": "^7.5.0",
    "@vitejs/plugin-react": "^4.2.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.34.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jest-webextension-mock": "^3.8.9",
    "jsdom": "^24.0.0",
    "msw": "^2.2.13",
    "prettier": "^3.2.5",
    "typescript": "^5.4.4",
    "vite": "^5.2.8",
    "vite-tsconfig-paths": "^4.3.2",
    "vitest": "^1.4.0",
    "vitest-dom": "^0.1.1"
  },
  "manifest": {
    "key": "$CRX_PUBLIC_KEY",
    "permissions": [
      "identity"
    ],
    "host_permissions": [
      "https://api.ynab.com/*"
    ],
    "optional_permissions": [
      "scripting",
      "activeTab"
    ],
    "options_ui": {
      "open_in_tab": true
    },
    "commands": {
      "_execute_action": {
        "suggested_key": {
          "default": "Alt+Shift+Y"
        }
      }
    },
    "browser_specific_settings": {
      "gecko": {
        "id": "{e734411e-6aae-4590-ab10-65e7a226b311}",
        "strict_min_version": "109.0"
      }
    }
  }
}
