{
  "name": "ynab-chrome-widget",
  "displayName": "Peek for YNAB",
  "version": "0.15.0",
  "description": "Check on your YNAB category and account balances, and quickly add transactions.",
  "author": "fa-sharp",
  "packageManager": "pnpm@8.14.1",
  "homepage": "https://peek-for-ynab.vercel.app",
  "type": "module",
  "scripts": {
    "dev:plasmo": "plasmo dev --port 3001",
    "dev:plasmo:edge": "plasmo dev --target=edge-mv3 --port 3001",
    "build:plasmo": "plasmo build --hoist",
    "build:plasmo:edge": "plasmo build --hoist --target=edge-mv3",
    "build:plasmo:zip": "plasmo build --hoist --zip",
    "dev:next": "next dev --port 3000",
    "build:next": "next build",
    "start:next": "next start",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "lint": "eslint ."
  },
  "dependencies": {
    "@plasmohq/storage": "^1.9.0",
    "@tanstack/query-core": "^5.17.10",
    "@tanstack/react-query": "^5.17.12",
    "@tanstack/react-query-devtools": "^5.17.12",
    "@tanstack/react-query-persist-client": "^5.17.12",
    "clsx": "^2.1.0",
    "cors": "^2.8.5",
    "downshift": "^8.3.1",
    "idb-keyval": "^6.2.1",
    "json-formatter-js": "^2.3.4",
    "nanoid": "^5.0.4",
    "next": "^14.0.4",
    "plasmo": "^0.84.0",
    "puro": "^0.8.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tabler-icons-react": "1.55.0",
    "use-local-storage-state": "^19.1.0",
    "ynab": "^2.2.0"
  },
  "devDependencies": {
    "@hello-pangea/dnd": "^16.5.0",
    "@next/eslint-plugin-next": "^14.0.4",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.2",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/chrome": "^0.0.256",
    "@types/cors": "^2.8.17",
    "@types/node": "^20.11.3",
    "@types/react": "^18.2.48",
    "@types/react-dom": "^18.2.18",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "@vitejs/plugin-react": "^4.2.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jest-webextension-mock": "^3.8.9",
    "jsdom": "^23.2.0",
    "msw": "^2.1.0",
    "prettier": "^3.2.2",
    "typescript": "^5.2.2",
    "vite-tsconfig-paths": "^4.2.3",
    "vitest": "^1.2.0",
    "vitest-dom": "^0.1.1"
  },
  "manifest": {
    "key": "$CRX_PUBLIC_KEY",
    "permissions": [
      "identity"
    ],
    "host_permissions": [
      "https://api.ynab.com/*"
    ],
    "optional_permissions": [
      "scripting",
      "activeTab"
    ],
    "options_ui": {
      "open_in_tab": true
    },
    "commands": {
      "_execute_action": {
        "suggested_key": {
          "default": "Alt+Shift+Y"
        }
      }
    }
  }
}
